define([],function(){function handleWindow(){const body=document.querySelector('body');if(window.innerWidth>body.clientWidth){body.classList.add('has-scrollbar');body.setAttribute('style','--scroll-bar: '+(window.innerWidth-body.clientWidth)+'px');}else{body.classList.remove('has-scrollbar');}}
return function(){handleWindow();window.addEventListener('resize',handleWindow);}});